{
  "name": "vite-boilerplate",
  "version": "0.0.0",
  "scripts": {
    "client:dev": "vite",
    "client:build": "tsc && vite build",
    "server:dev": "ts-node-dev --respawn --transpile-only --project tsconfig.server.json src/server.ts",
    "server:build": "tsc --project tsconfig.server.json",
    "build": "npm run server:build && npm run client:build && npm run storybook:build",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\" \"npm run storybook\"",
    "serve": "vite preview",
    "prepare": "husky install",
    "test": "tsc && prettier --check . && eslint . && stylelint \"**/*.css\"",
    "start": "node dist/server.js",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o dist/storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@storybook/addon-actions": "^6.4.1",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.1",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.26",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vitejs/plugin-react": "^1.2.0",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.5.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "2.5.0",
    "storybook-builder-vite": "^0.1.17",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5",
    "vite": "^2.8.4"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1"
  }
}
